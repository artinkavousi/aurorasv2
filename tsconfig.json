{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals",
      "vite/client"
    ]
  },
  "include": [
    "src/**/*",
    "index.*",
    "vite.config.js",
    "tests/**/*",
    "vitest.config.ts"
  ]
}
